<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.playn.tests</groupId>
    <artifactId>playn-tests</artifactId>
    <version>2.0.0</version>
  </parent>

  <artifactId>playn-tests-bugvm</artifactId>
  <version>2.0.1</version>
  <name>PlayN Tests BugVM</name>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>playn-tests-core</artifactId>
      <version>2.0.0</version>
    </dependency>

    <dependency>
      <groupId>io.playn</groupId>
      <artifactId>playn-bugvm</artifactId>
      <version>2.0.0</version>
    </dependency>
  </dependencies>
  <build>
<!--	<pluginGroups>-->
<!--		<pluginGroup>com.bugvm</pluginGroup>-->
<!--	</pluginGroups>-->
	<plugins>
		<plugin>
<!--            <groupId>org.bugvm</groupId>-->
<!--            <artifactId>bugvm-maven-plugin</artifactId>-->
 			<groupId>com.bugvm</groupId>
			<artifactId>bugvm-maven</artifactId>
			<version>${bugvm.maven.version}</version>
			<configuration>
				<deviceName>iPhone-6-Plus</deviceName>
			</configuration>
		</plugin>
		<plugin>
		  <groupId>org.codehaus.mojo</groupId>
		  <artifactId>build-helper-maven-plugin</artifactId>
		  <version>1.5</version>
		  <executions>
		    <execution>
		      <id>attach-artifacts</id>
		      <phase>package</phase>
		      <goals>
		        <goal>attach-artifact</goal>
		      </goals>
		      <configuration>
		        <artifacts>
		          <artifact>
		            <file>target/bugvm/TestsGameBugVM.ipa</file>
		            <type>ipa</type>
		          </artifact>
		          <artifact>
		            <file>TestsGameBugVM.plist</file>
		            <type>plist</type>
		          </artifact>
		          <artifact>
		            <file>TestsGameBugVM.html</file>
		            <type>html</type>
		          </artifact>
		        </artifacts>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>
	</plugins>
  </build>
  <profiles>
    <profile>
      <id>bugsim</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.bugvm</groupId>
            <artifactId>bugvm-maven-plugin</artifactId>
            <executions>
              <execution>
                <phase>test</phase>
                <goals>
                  <goal>iphone-sim</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>bugdev</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.bugvm</groupId>
            <artifactId>bugvm-maven</artifactId>
            <executions>
              <execution>
                <phase>install</phase>
                <goals>
                  <goal>ios-device</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
