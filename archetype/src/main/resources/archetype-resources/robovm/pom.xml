<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>${groupId}</groupId>
    <artifactId>${rootArtifactId}</artifactId>
    <version>${version}</version>
  </parent>

  <artifactId>${artifactId}-robovm</artifactId>
  <packaging>jar</packaging>
  <name>${JavaGameClassName} RoboVM</name>

  <properties>
    <mainClass>${package}.robovm.${JavaGameClassName}RoboVM</mainClass>
    <device>iPhone-6</device>
  </properties>

  <dependencies>
    <dependency>
      <groupId>${groupId}</groupId>
      <artifactId>${rootArtifactId}-core</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>io.playn</groupId>
      <artifactId>playn-robovm</artifactId>
      <version>${playn.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.6</version>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <configuration>
              <target>
                <!-- generate a symlink to our assets directory in the proper location -->
                <symlink overwrite="true" link="${basedir}/resources/assets"
                         resource="${basedir}/../assets/src/main/resources/assets"/>
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <!-- Test on the simluator like so: mvn test -Probosim -->
    <profile>
      <id>robosim</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.mobidevelop.robovm</groupId>
            <artifactId>robovm-maven-plugin</artifactId>
            <version>${robovm.version}</version>
            <configuration>
              <deviceName>${device}</deviceName>
            </configuration>
            <executions>
              <execution>
                <phase>test</phase>
                <goals>
                  <goal>iphone-sim</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <!-- Install a dev build in your device like so: mvn install -Probodev -->
    <profile>
      <id>robodev</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.mobidevelop.robovm</groupId>
            <artifactId>robovm-maven-plugin</artifactId>
            <version>${robovm.version}</version>
            <configuration>
              <arch>arm64</arch>
            </configuration>
            <executions>
              <execution>
                <phase>install</phase>
                <goals>
                  <goal>ios-device</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <!-- Build your IPAs for the app store like so: mvn package -Proboipa -->
    <profile>
      <id>roboipa</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.mobidevelop.robovm</groupId>
            <artifactId>robovm-maven-plugin</artifactId>
            <version>${robovm.version}</version>
            <configuration>
              <iosSignIdentity>${robovm.app.signer}</iosSignIdentity>
              <iosProvisioningProfile>${robovm.app.cert}</iosProvisioningProfile>
              <ipaArchs>thumbv7:arm64</ipaArchs>
            </configuration>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>create-ipa</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
